<h1>Battle!</h1>
<h2>Sign in to play</h2>
<form action="/names" method="post">
  <label for="player_1_name">
    Player 1 name
    <input type="text" name="player_1_name">
  </label>
  <label for="player_1_hp">
    Player 1 hit points
    <input type="number" name="player_1_hp" min="1" max="60" value="60">
  </label>
  <label for="player_1_name">
    Player 2 name
    <input type="text" name="player_2_name">
  </label>
  <label for="player_2_hp">
    Player 2 hit points
    <input type="number" name="player_2_hp" min="1" max="60" value="60">
  </label>
  <input type="submit" value="Submit">
</form>
